<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageView
        android:layout_width="189dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_small"
        android:layout_weight="0.41" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    <com.facebook.login.widget.LoginButton
        xmlns:fb="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/fbloginBtn"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        fb:com_facebook_login_text=""
        fb:com_facebook_logout_text=""
        android:scaleType="centerInside"
        android:drawableLeft="@null"
        android:paddingTop="11dp"
        android:paddingBottom="10dp"/>

    <com.freeoda.pharmacist.thepharmacist.AutoButtonEffector
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/googleloginBtn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/google_log"
        android:paddingTop="11dp"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

    <EditText
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:ems="10"/>


    <com.freeoda.pharmacist.thepharmacist.AutoButtonEffector
        android:id="@+id/login_loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:background="@color/wisteria"
        android:textColor="@color/white"/>

        <Button
            android:id="@+id/login_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new Account"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"

            />

    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>




</LinearLayout>